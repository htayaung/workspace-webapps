<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="ModalCancel">Cancel</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="ModalOk">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string ContentText { get; set; }

    [Parameter]
    public string ButtonText { get; set; }

    [Parameter]
    public Color Color { get; set; }

    private void ModalCancel() => MudDialog.Cancel();

    private void ModalOk() => MudDialog.Close(DialogResult.Ok(true));
}
