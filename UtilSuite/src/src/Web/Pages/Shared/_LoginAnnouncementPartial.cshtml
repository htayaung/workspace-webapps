@using Application.Announcement.Queries
@model IList<AnnouncementDto>

<div class="card" style="min-height:521px;">
    <div class="card-header">
        <h3 class="card-title">Announcements</h3>
    </div>
    <div class="card-body">
        <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        @Html.Raw(Model[i].Description)
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a class="btn-sm" href="#carouselIndicators" role="button" data-slide="prev"><i class="fas fa-arrow-circle-left"></i></a>
        <a class="btn-sm float-right" href="#carouselIndicators" role="button" data-slide="next"><i class="fas fa-arrow-circle-right"></i></a>
    </div>
</div>
