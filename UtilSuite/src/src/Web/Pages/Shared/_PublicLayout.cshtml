<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @AppSettingHelper.GetApplicationName()</title>
    <link rel="icon" type="image/png" href="~/favicon.png">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/adminlte/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/dist/css/public-style.min.css" />
</head>
<body class="d-flex flex-column h-100 public-container">
    <main role="main" class="flex-shrink-0">
        <div class="container">
            <header class="py-3 mb-md-5">
                <a class="header-logo text-dark" asp-page="/Index"><b>Util</b>Suite</a>
            </header>
            @RenderBody()
        </div>
    </main>
    <footer class="footer mt-auto py-3">
        <div class="container">
            <strong>&copy; @DateTime.Now.Year - @AppSettingHelper.GetApplicationName()</strong>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/adminlte/dist/js/adminlte.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>