@page
@using Application.Common.Utility
@model Web.Pages.Announcements.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Input.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Input.Name)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Input.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.Raw(Model.Input.Description)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Input.StartDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Input.StartDate)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Input.EndDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Input.EndDate)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Input.IsPublic)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Input.IsPublic)
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <div class="float-right">
                            <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@EncryptDecryptHelper.EncryptByAes(Model.Input.Id.ToString(), Model.UserId.ToString())">Edit</a>
                            <a asp-page="./Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
