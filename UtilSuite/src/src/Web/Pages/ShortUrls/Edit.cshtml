@page
@model Web.Pages.ShortUrls.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <form method="post">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="callout callout-danger"></div>
                            <input type="hidden" asp-for="Input.Id" />
                            <div class="mb-3">
                                <label asp-for="Input.Url" class="form-label"></label>
                                <input type="text" asp-for="Input.Url" class="form-control">
                                <span asp-validation-for="Input.Url" class="text-danger"></span>
                            </div>

                            @if (Model.Input != null && !string.IsNullOrEmpty(Model.Input.ShortenedUrl))
                            {
                                <div class="mb-3">
                                    <label asp-for="Input.ShortenedUrl" class="form-label"></label>
                                    <input type="text" readonly asp-for="Input.ShortenedUrl" class="form-control-plaintext">
                                    <span asp-validation-for="Input.ShortenedUrl" class="text-danger"></span>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button id="submit" type="submit" class="btn btn-primary">Save</button>
                                <a asp-page="./Index">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
