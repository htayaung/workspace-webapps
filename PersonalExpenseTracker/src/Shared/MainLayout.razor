@inherits LayoutComponentBase

<PageTitle>PersonalExpenseTracker</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row px-4 auth">
                    <LoginDisplay />
                </div>

                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        <LoginDisplay />
        <main>
            @Body
        </main>
        <FooterDisplay />
    </NotAuthorized>
</AuthorizeView>
