@using MudBlazor;
<MudBlazor.MudText Typo="Typo.h6" Align="Align.Center">@Title</MudBlazor.MudText>
<MudBlazor.MudPaper>
    <MudBlazor.MudChart ChartType="ChartType.Line"
                        ChartSeries="@Series"
                        XAxisLabels="@XAxisLabels" Width="100%" Height="350px">
    </MudBlazor.MudChart>
</MudBlazor.MudPaper>

@code {
    [Parameter]
    public List<ChartSeries> Series { get; set; }

    [Parameter]
    public string[] XAxisLabels { get; set; }

    [Parameter]
    public string Title { get; set; }
}
